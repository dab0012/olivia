[MASTER]

; # Deshabilitar algunos mensajes
; disable=minvalid-name,
;         line-too-long,
;         too-many-arguments,
;         too-many-branches,
;         too-many-instance-attributes,
;         too-many-lines,
;         too-many-public-methods,
;         too-many-statements,
;         no-self-use

# Deshabilitar algunos mensajes de tipos específicos
disable=C0103,  # invalid-name
        C0303,  # trailing-whitespace
        C0301,  # line-too-long
        C0305,  # trailing-newlines
        W0105,  # pointless-string-statement
        E0401,  # import-error
        C0413,  # wrong-import-order
        C0411,  # wrong-import-order
        C0112,  # empty-docstring in module
        C0114,  # missing-module-docstring
        C0304,  # missing-final-newline
        W0718,  # duplicate-exception
        W1514,  # unespecified-encoding

# Ignorar algunos archivos y carpetas
ignore=.venv,
       .vscode,
       __pycache__,
       migrations,
       olivia,
       docs,
       logs

; [MESSAGES CONTROL]

; # Deshabilitar algunos mensajes específicos
; disable=logging-fstring-interpolation,
;         logging-format-interpolation,
;         useless-suppression


